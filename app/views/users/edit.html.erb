  <div class="user_edit">
    <%= form_for @user, url: update_user_path do |f| %>
      <table>
        <tr>
          <td><%= f.label :用户名 %></td>
        </tr>
        <tr>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label :是否添加管理权限? %></td>
        </tr>
        <tr>
          <td>
            <input type="radio" id="post_category1" name="user[admin]" value = true /><span>是</span>      
            <input type="radio" id="post_category2" name="user[admin]" value = false checked="checked" /><span >否</span>
          </td>
        </tr>
      </table>
      <p><input type="submit" class = "submit-issue-button btn btn-primary" ></p>
    <% end %>
  </div> 
